<template>\r\n  <div class=\"center\">\r\n    <!-- 面包屑区域 -->\r\n    <div class=\"bread\">\r\n      <el-breadcrumb :separator-icon=\"ArrowRight\">\r\n        <el-breadcrumb-item>个人中心</el-breadcrumb-item>\r\n      </el-breadcrumb>\r\n    </div>\r\n\r\n    <div class=\"user-info\">\r\n      <el-row :gutter=\"20\">\r\n        <!-- 左侧用户信息 -->\r\n        <el-col :span=\"8\" style=\"text-align: center\">\r\n          <el-card class=\"leftUserInfo\">\r\n            <el-avatar :size=\"70\" :src=\"avatarUrl\" />\r\n            <h3>{{ store.state.userInfo.username }}</h3>\r\n            <h5>{{ store.state.userInfo.role === 1 ? '管理员' : '编辑' }}</h5>\r\n          </el-card>\r\n        </el-col>\r\n        <!-- 右侧用户信息更新 -->\r\n        <el-col :span=\"8\">\r\n          <template #header>\r\n            <span>个人信息</span>\r\n          </template>\r\n\r\n          <el-form ref=\"UserRef\" :model=\"userForm\" :rules=\"UserRules\" label-width=\"120px\" :size=\"formSize\" status-icon>\r\n            <!-- 用户名 -->\r\n            <el-form-item label=\"用户名\" prop=\"username\">\r\n              <el-input v-model=\"userForm.username\" />\r\n            </el-form-item>\r\n            <!-- 性别 -->\r\n            <el-form-item label=\"性别\" prop=\"gender\">\r\n              <el-select v-model=\"userForm.gender\" style=\"width: 100%;\" placeholder=\"请选择性别\">\r\n                <el-option v-for=\"item in options\" :key=\"item.value\" :label=\"item.label\" :value=\"item.value\" />\r\n              </el-select>\r\n            </el-form-item>\r\n            <!-- 个人简介 -->\r\n            <el-form-item label=\"个人简介\" prop=\"introduction\">\r\n              <el-input v-model=\"userForm.introduction\" type=\"textarea\" placeholder=\"介绍一下自己哦 ~\" />\r\n            </el-form-item>\r\n            <!-- 头像上传 -->\r\n            <el-form-item label=\"头像上传\" prop=\"avatar\">\r\n              <el-upload class=\"avatar-uploader\" action=\"\" :show-file-list=\"false\" :on-change=\"handleChange\"\r\n                :auto